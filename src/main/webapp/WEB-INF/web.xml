<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>TaskManagement</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.todo.controller.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/UserController</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>HomeController</servlet-name>
    <servlet-class>com.todo.controller.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeController</servlet-name>
    <url-pattern>/HomeController</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>com.todo.controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/LogoutController</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>UserTaskController</servlet-name>
    <servlet-class>com.todo.controller.UserTaskController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserTaskController</servlet-name>
    <url-pattern>/UserTaskController</url-pattern>
  </servlet-mapping> 
</web-app>